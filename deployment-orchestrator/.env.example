# Firestore
FIRESTORE_COLLECTION_DEPLOYMENTS=deployments
FIRESTORE_COLLECTION_LOGS=deployment_logs
FIRESTORE_COLLECTION_API_KEYS=api_keys

# Cloud Tasks (for reliable background execution)
# GCP_LOCATION=europe-west1
# CLOUD_TASKS_QUEUE_PATH=projects/YOUR_PROJECT/locations/europe-west1/queues/visgate-orchestrator-queue
# INTERNAL_WEBHOOK_BASE_URL=https://your-cloud-run-service-url
# Runpod: template must use our inference image. Create once: run scripts/create_runpod_template.py (uses RUNPOD + IMAGE from ../.env.local), then set RUNPOD_TEMPLATE_ID below.
DOCKER_IMAGE=your-docker-user/inference:latest
RUNPOD_TEMPLATE_ID=

# Logging
LOG_LEVEL=INFO

# Retries & timeouts
RUNPOD_MAX_RETRIES=3
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=3

# Optional: local dev only â€“ internal webhook auth
# INTERNAL_WEBHOOK_SECRET=

# Optional: test API key (must exist in Firestore api_keys for Bearer auth)
# ORCHESTRATOR_API_KEY=
